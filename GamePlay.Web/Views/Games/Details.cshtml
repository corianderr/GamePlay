@model GameModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="text-center">
    <h2>@Model.Name</h2>
    <div class="card h-100 w-75 mx-auto">
        <img class="card-img-top" src="@Model.PhotoPath" alt="Game image">
        <div class="card-body my-auto">
            <h5 class="card-title">@Model.NameRu / @Model.NameEn</h5>
            <p class="card-text">
                From @Model.MinPlayers to @Model.MaxPlayers participants<br/>
                Time: @Model.MinPlayTime - @Model.MaxPlayTime minutes<br/>
                <i>Required minimum age: @Model.MinAge</i><br/>
                <strong>Average rating: @Model.AverageRating.ToString("#.##")</strong>
            </p>
            <div>
                <a class="btn btn-light" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-light" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                <a class="btn btn-warning" asp-controller="Users" asp-action="AddGame" asp-route-id="@Model.Id">Add in my collection</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
            <div class="text-center d-flex">
                @if (ViewBag.Rating == null)
                {
                    <form asp-controller="Games" asp-action="RateGame" method="post" class="ms-auto">
                        <input type="hidden" name="id" value="@Model.Id">
                        <div class="d-flex mb-3">
                            <div class="rating choose">
                                <input id="star5" name="rating" type="radio" value="5" class="radio-btn hide"/>
                                <label for="star5">☆</label>
                                <input id="star4" name="rating" type="radio" value="4" class="radio-btn hide"/>
                                <label for="star4">☆</label>
                                <input id="star3" name="rating" type="radio" value="3" class="radio-btn hide"/>
                                <label for="star3">☆</label>
                                <input id="star2" name="rating" type="radio" value="2" class="radio-btn hide"/>
                                <label for="star2">☆</label>
                                <input id="star1" name="rating" type="radio" value="1" class="radio-btn hide"/>
                                <label for="star1">☆</label>
                                <div class="clear"></div>
                            </div>
                            <input type="submit" value="Rate" class="btn btn-warning"/>
                        </div>
                    </form>
                }
                else
                {
                    <div class="rating show-result ms-auto" disabled>
                        <input id="star5" name="rating" type="radio" value="5" class="radio-btn hide" disabled/>
                        <label for="star5">☆</label>
                        <input id="star4" name="rating" type="radio" value="4" class="radio-btn hide" disabled/>
                        <label for="star4">☆</label>
                        <input id="star3" name="rating" type="radio" value="3" class="radio-btn hide" disabled/>
                        <label for="star3">☆</label>
                        <input id="star2" name="rating" type="radio" value="2" class="radio-btn hide" disabled/>
                        <label for="star2">☆</label>
                        <input id="star1" name="rating" type="radio" value="1" class="radio-btn hide" disabled/>
                        <label for="star1">☆</label>
                        <div class="clear"></div>
                    </div>
                }
            </div>
        </div>
        <div class="card-footer text-body-secondary">
            Released in @Model.YearOfRelease<br/>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
                const starInputs = document.querySelectorAll('.show-result input[type="radio"]');
                
                const selectedStar = parseInt(@ViewBag.Rating);
                starInputs[starInputs.length - selectedStar].checked = true;
            });
    </script>
}